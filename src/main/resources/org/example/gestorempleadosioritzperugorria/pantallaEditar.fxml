        </Label>
        <Label text="Salario">
            <graphic>
                <TextField fx:id="salario" prefWidth="150.0" promptText="Introduzca el salario..." />
            </graphic>
        </Label>
        <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="488.0" spacing="50.0">
